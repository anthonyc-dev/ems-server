model Courses {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  courseCode      String      @unique
  courseName      String
  description     String?
  units           Int
  departments      String[]
  prerequisites   String[]

  // Section-specific fields
  maxCapacity     Int?
  schedules        Schedule[]
  semester        String?
  yearLevel       String?

  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}


type Schedule {
  day         String
  timeStart   String
  timeEnd     String
  room        String
  instructor  String
}